{
  "name": "formwerk-mono-repo",
  "private": true,
  "description": "",
  "main": "index.js",
  "type": "module",
  "packageManager": "pnpm@10.7.0+sha256.35cab26953bf90847e798839db58c9a2a82d526b7af179fd2a103c18242cadc6",
  "homepage": "https://formwerk.dev",
  "repository": "https://github.com/formwerkjs/formwerk",
  "scripts": {
    "test": "vitest",
    "cover": "vitest run --coverage",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier \"./**/*.ts\" --write",
    "build": "tsx scripts/build.ts",
    "build:watch": "tsx scripts/watch.ts",
    "typecheck": "pnpm typecheck:lib && pnpm typecheck:node",
    "typecheck:lib": "pnpm tsc --noEmit --project ./tsconfig.lib.json --skipLibCheck",
    "typecheck:node": "pnpm tsc --noEmit --project ./tsconfig.node.json --skipLibCheck",
    "postinstall": "husky install",
    "prepare": "husky",
    "prepublishOnly": "pnpm test && pnpm build",
    "playground:dev": "cd ./packages/playground && pnpm dev && cd -",
    "dev": "pnpm build && concurrently \"pnpm build:watch\" \"pnpm playground:dev\"",
    "ci:copy-mds": "tsx scripts/copy-mds.ts",
    "ci:publish": "pnpm build && pnpm publish --provenance --access public -r",
    "ci:version": "pnpm changeset version && pnpm ci:copy-mds",
    "ci:tag": "tsx ./scripts/tag-release.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "9.25.1",
    "@testing-library/vue": "^8.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "@vue/compiler-dom": "^3.5.13",
    "@vue/server-renderer": "^3.5.13",
    "concurrently": "^9.1.2",
    "consola": "^3.4.2",
    "eslint": "9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-promise": "^7.2.1",
    "filesize": "^10.1.6",
    "flush-promises": "^1.0.2",
    "fs-extra": "^11.3.0",
    "globals": "^16.0.0",
    "gzip-size": "^7.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "pkg-pr-new": "^0.0.42",
    "prettier": "^3.5.3",
    "rolldown": "1.0.0-beta.8",
    "rollup": "^4.40.0",
    "rollup-plugin-dts": "^6.2.1",
    "tslint-config-prettier": "^1.18.0",
    "tsx": "^4.19.3",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.31.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2",
    "vitest-axe": "1.0.0-pre.3",
    "vitest-dom": "^0.1.1",
    "vue": "^3.5.13"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "vitest run related --passWithNoTests"
    ],
    "*.js": [
      "eslint --fix",
      "vitest run related --passWithNoTests"
    ]
  },
  "keywords": [],
  "author": "Abdelrahman Awad <logaretm1@gmail.com>",
  "license": "MIT"
}
