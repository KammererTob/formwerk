{
  "name": "formwerk-mono-repo",
  "private": true,
  "description": "",
  "main": "index.js",
  "type": "module",
  "packageManager": "pnpm@8.14.1",
  "homepage": "https://formwerk.dev",
  "repository": "https://github.com/formwerkjs/formwerk",
  "scripts": {
    "test": "vitest",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier \"./**/*.ts\" --write",
    "build": "tsx scripts/build.ts",
    "cover": "vitest run --coverage",
    "postversion": "pnpm build",
    "typecheck": "pnpm tsc --noEmit --project ./tsconfig.json --skipLibCheck",
    "docs:dev": "cd ./docs && pnpm dev && cd -",
    "postinstall": "husky install",
    "release": "./scripts/release.sh",
    "play:dev": "cd ./packages/playground && pnpm dev && cd -",
    "dev": "tsx scripts/watch.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.7.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-typescript": "^11.1.5",
    "@testing-library/vue": "^8.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.11",
    "@vitest/coverage-v8": "^2.0.3",
    "@vue/compiler-dom": "^3.4.33",
    "consola": "^3.2.3",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.5.1",
    "filesize": "^10.1.4",
    "fs-extra": "^11.2.0",
    "globals": "^15.8.0",
    "gzip-size": "^7.0.0",
    "husky": "^9.1.1",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "rollup": "^4.19.0",
    "rollup-plugin-dts": "^6.1.1",
    "terser": "^5.31.3",
    "tslint-config-prettier": "^1.18.0",
    "tsx": "^4.16.2",
    "typescript": "5.5.3",
    "typescript-eslint": "^7.16.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.3",
    "vue": "^3.4.33"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "vitest run related --passWithNoTests"
    ],
    "*.js": [
      "eslint --fix",
      "vitest run related --passWithNoTests"
    ]
  },
  "keywords": [],
  "author": "Abdelrahman Awad <logaretm1@gmail.com>",
  "license": "MIT"
}
